<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:corners="http://schemas.android.com/apk/res-auto">
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="2dp"
                android:color="@color/myriad_green"/>
            <gradient android:angle="-90"
                android:startColor="@color/myriad_green"
                android:endColor="@color/myriad_darker_green"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/myriad_darker_green"/>
        </shape>
    </item>
</selector>